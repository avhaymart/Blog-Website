extends ../node_modules/pug-bootstrap/_bootstrap

block body
  +navbar("MySQL Blog","dropdown_menu")
    +nav_item("/") Home
    +nav_item("/create", "active") Create Blog Post

  section
    .container
      h2 Create Blog Post
      form(method='POST' action='/create')
        div.form-group
          label(for='title') Post Title:
          input#name.form-control(type='text', placeholder='Hello world!' name='title' required)
        div.form-group
          label(for='content') Post Content:
          textarea#content.form-control(placeholder='This is my blog post.' rows='10'  name='content' required)
        button.btn.btn-primary(type='submit') Create Post